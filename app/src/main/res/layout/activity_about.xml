<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/aboutBackButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                About"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/useLogo"
                    android:layout_width="130dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/newsicon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/useLogo"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:text="Newsus"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/app_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.0.0  (Beta Testing)"
                        android:textAlignment="center"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/supportId"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/card"
            android:layout_marginTop="90dp"
            android:background="#81EDE5E5">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/per"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designed And Devoloped By"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/devoloperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuhin Subhra Hazra"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support on "
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linkDin"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/linkdin"/>

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/insta"/>

                <ImageView
                    android:id="@+id/gitHub"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/github"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/per"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/devoloper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BlueTint"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>